# Flask secret key — generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-string

# Admin account (full control)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# Viewer account (bookkeeper — browse and download only)
VIEWER_USERNAME=viewer
VIEWER_PASSWORD=change-me

# Whisper model: tiny, base, small, medium, large
WHISPER_MODEL=base

# Rate limiting: max requests per token per hour
RATE_LIMIT=60

# Max upload size in MB
MAX_UPLOAD_MB=30

# GPS validation: max distance (miles) between punch and job before flagging
GPS_FLAG_DISTANCE_MILES=0.5
